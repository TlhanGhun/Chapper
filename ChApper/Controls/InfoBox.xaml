<UserControl x:Class="Chapper.Controls.InfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock Name="textBlockTitle" TextWrapping="Wrap" Margin="4,4,4,4" FontSize="10" />
        <TextBlock Name="textBlockContent" Height="Auto"  TextWrapping="Wrap" Margin="4,16,4,4" />
        <TextBox Name="textBoxContent" Height="Auto"  TextWrapping="Wrap" FontSize="10" Margin="4,18,4,4" />
    </Grid>
</UserControl>
